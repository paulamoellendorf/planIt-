<!-- views/auth/familysignup.hbs -->
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">   
    </head>
     <div class="login-form-bg h-100 ">
        <div class="container h-100 ">
            <div class="row h-100r">
                <div class="col-xl-6 ">
                    <div class="form-input-content">
                      <div class="card login-form mb-0">
                            <div class="card-body pt-5 ">
                                <h4 class="text-center ">Family Signup</h4>
                                  <form action="/login" method="POST" class="mt-5 mb-5 login-input ">                
                                    <div class="form-group ">
                                       <input type="text" name="username" placeholder="Username">
                                         </div>
                                           <div class="form-group ">
                                             
                                             <input type="password" name="password" placeholder="Password">
                                            </div>
                                            <div class="form-group">
                                               <input type="text" name="familyName" placeholder="your family name">
                                            </div>
                                           {{#if message}}
                                         <div class="error-message ">{{ message }}</div>
                                      {{/if}}
                                    <button class="btn login-form__btn submit ">Create Family</button>
                                  </form>
                                  <footer class="loginFooter">
                               
                            <p>Already have account? <a href="/login" class="text-primary">Login</a> here </p>
                                 </footer>
                                  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 <html>