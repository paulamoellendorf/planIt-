<!-- views/auth/familysignup.hbs -->
<h2>Family Signup</h2>
 
<form action="/familysignup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br><br>
  <label for="familyName">Family Name</label>
  <input id="familyName" type="text" name="familyName" placeholder="House Stark">
  <br><br>
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
 
  <button>Create Family</button>
 
  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
  </p>
</form>