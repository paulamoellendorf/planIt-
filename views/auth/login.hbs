
   <div class="container-fluid">
     <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                      <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <h4 class="text-center">Login</h4>
                                  <form action="/login" method="POST" class="mt-5 mb-5 login-input">
                                    <div class="form-group">
                                       <input type="text" name="username" placeholder="Username">
                                         </div>
                                           <div class="form-group">
                                             <input type="password" name="password" placeholder="Password">
                                            </div>
                                           {{#if message}}
                                         <div class="error-message">{{ message }}</div>
                                      {{/if}}
                                    <button class="btn login-form__btn submit ">Log In</button>
                                  </form>
                                <p class="mt-5 login-form__footer">Dont have account? <a href="/familysignup" class="text-primary">Sign Up</a> now</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

                    